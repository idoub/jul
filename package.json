{
  "name": "jul",
  "version": "0.0.1",
  "description": "Javascript Utility Library",
  "main": "gulpfile.js",
  "scripts": {
    "postinstall": "npm run build && npm run test && npm run deploy",

    "prebuild": "mkdir -p ./dist/ & mkdir -p ./coverage/",
    "build": "npm run build:concat && npm run build:minify && npm run build:report",
    "build:concat": "MODULES=$(cat .modules) && concat -o ./dist/$npm_package_name$npm_package_version.js ./src/jul.js ./src/addModule.js ${MODULES[@]}",
    "build:minify": "minify ./dist/$npm_package_name$npm_package_version.js > ./dist/$npm_package_name$npm_package_version.min.js",
    "build:report": "gzipped ./dist/$npm_package_name$npm_package_version.min.js > ./coverage/size",

    "pretest": "mkdir -p ./coverage/",
    "test": "npm run test:instrument && npm run test:mocha && npm run test:report",
    "test:instrument": "istanbul instrument ./dist/$npm_package_name$npm_package_version.js > ./dist/jul.instrumented.js",
    "test:mocha": "mocha-phantomjs ./test/index.html -R spec -k mocha-phantomjs-istanbul",
    "test:report": "istanbul report text-summary html",

    "deploy": "jsdoc -c ./jsdoc.json -R ./README.md ./dist/$npm_package_name$npm_package_version.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/jumpnjellyfish/jul.git"
  },
  "keywords": [
    "js",
    "javascript",
    "utility",
    "library"
  ],
  "author": "Isaac Doub https://gitlab.com/jumpnjellyfish",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/jumpnjellyfish/jul/issues"
  },
  "homepage": "https://gitlab.com/jumpnjellyfish/jul#README",
  "devDependencies": {
    "concat": "^1.0.3",
    "minify": "^2.0.14",
    "gzipped": "^0.0.5",
    "nyc": "^10.3.2",
    "istanbul": "^0.4.5",
    "mocha-phantomjs": "^4.1.0",
    "mocha-phantomjs-istanbul": "^0.0.2",
    "jsdoc": "^3.4.3",
    "minami": "^1.2.3"
  }
}
